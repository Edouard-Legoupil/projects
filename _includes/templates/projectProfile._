<div id="summary" class="span9 project raised">
    <div class="row-fluid separator">
        <div class="span10">
            <p class="lead"><%= model.get('title') %></p>
        </div>
        <div class="span2">
            <p class="lead projid"><%= model.get('id') %></p>
        </div>
    </div>

    <div id="top-stats" class="row-fluid">
        <div class="span8">
            <div class="row-fluid">
                <div class="span6">

                    <div class="label">Donors</div>
                    <%
                    var donors_short = _.chain(model.get('subproject'))
                        .map(function (o) { return o.donor_short })
                        .flatten()
                        .union()
                        .value();
                    var donors_long = _.chain(model.get('subproject'))
                        .map(function (o) { return o.donor_long })
                        .flatten()
                        .union()
                        .value();
                    %>
                    <p>
                        <% if (donors_long.length < 5) { %>
                            <%= donors_long.join(', ') %>
                        <% } else { %>
                            <%= donors_short.join(', ') %>
                        <% } %>
                    </p>
                </div>

                <div class="span3">
                    <div class="label">Budget</div>
                    <% _.each(model.get('budgetyears'), function(v,k) { %>
                    <div><span class="date"><%= k %></span> <%= accounting.formatMoney(v) %></div>
                    <% }); %>
                </div>
                <div class="span3" style="min-width: 90px;">
                    <div class="label">Expenditure</div>
                    <% _.each(model.get('expendyears'), function(v,k) { %>
                    <div><span class="date"><%= k %></span> <%= accounting.formatMoney(v) %></div>
                    <% }); %>
                </div>

            </div>
            <div class="row-fluid">
                <div class="span6">
                    <div class="label">Outcomes</div>
                    <%
                    var outcomeCount = _.chain(model.get('subproject'))
                        .map(function (o) { return o["focus area"] })
                        .flatten()
                        .compact()
                        .reduce(function(counts, items) {
                            counts[items] = (counts[items] || 0) + 1;
                            return counts; }, {})
                        .value();
                    %>
                    <ul class="unstyled">
                    <% for (var key in outcomeCount) { %>
                    <li><%= key %> (<%= outcomeCount[key] %>)</li>
                    <% } %>
                    </ul>
                </div>
                <div class="span3">
                    <div class="label">Start</div>
                    <p><%= model.get('start').split(' ')[0] %></p>
                </div>
                <div class="span3">
                    <div class="label">End</div>
                    <p><%= model.get('end').split(' ')[0] %></p>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <div class="label">Gender</div>
                    <%
                    var genderCount = _.chain(model.get('subproject'))
                        .map(function (o) { return o["gender code"] })
                        .flatten()
                        .compact()
                        .reduce(function(counts, items) {
                            counts[items] = (counts[items] || 0) + 1;
                            return counts; }, {})
                        .value();
                    %>
                    <ul class="unstyled">
                    <% for (var key in genderCount) { %>
                    <li><%= key %> (<%= genderCount[key] %>)</li>
                    <% } %>
                    </ul>
                </div>
                <div class="span6">
                    <div class="label">Operating Unit</div>
                    <p><%= model.get('operating_unit') %></p>
                </div>

            </div>
        </div>
        <div class="span4">
            <div class="row-fluid">
                <div class="span12">
                    <div class="label visible-phone">Location</div>
                    <div id="profilemap" class="map"></div>
                </div>
            </div>
        </div>
    </div> <!--/ #top-stats -->

    <div class="separator">
        <p class="lead">Outputs <span>(<%= model.get('subproject').length %>)</p>
    </div>

    <% _.each(model.get('subproject'), function(obj, i) { %>
    <% if (_.indexOf(model.get('sub_ids'),obj.id) > -1) { %>
    <div id="subproject<%= obj.id %>" class="project row-fluid">
        <div class="span1">
            <p class="lead"><strong><%= obj.id %></strong></p>
        </div>
        <div class="span5">
            <h3><%= obj.title %></h3>
            <p><%= obj.description %></p>
        </div>
        <div class="span4">
            <div class="row-fluid">
                <div class="label">Outcome</div>
                <% if (obj["focus area"]) { %>
                <span><strong><%= obj["focus area"] %></strong></span> &raquo;
                <span><%= obj["corporate outcome"] %></span>
                <% } %>
            </div>
            <% if (obj["gender code"]) { %>
            <div class="row-fluid">
                <div class="label">Gender Equality</div>
                <span><%= obj["gender code"]
                  .replace(/ to gender equality/i,"")
                  .replace(/gender equality as a /i,"")
                  .capitalize() %></span>
            </div>
            <% } %>
            <div class="row-fluid">
                <div class="label">Donors</div>
                <span><%= obj["donor_short"].join(', ') %></span>
            </div>
        </div>
        <div class="span2">
            <div class="row-fluid">
                <div class="span12">
                    <div class="label">Budget</div>
                    <% _.each(model.get('subproject'), function(o, j) { %>
                    <% if (o.id === obj.id) { %>
                    <div><span class="date"><%= o["fiscal year"] %></span> <%= accounting.formatMoney(o.budget) %></div>
                    <% } }); %>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="label">Expenditure</div>
                    <% _.each(model.get('subproject'), function(o, j) { %>
                    <% if (o.id === obj.id) { %>
                    <div><span class="date"><%= o["fiscal year"] %></span> <%= accounting.formatMoney(o.expenditure) %></div>
                    <% } }); %>
                </div>
            </div>
        </div>
    </div><!--/ .subproject<%= obj.id %> -->
    <% model.get('sub_ids').shift(); } }); %>

</div> <!--/ #summary -->
